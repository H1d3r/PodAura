<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- below of the player_auto_hidden_control_view -->
    <com.skyd.anivu.ui.player.ForwardRippleView
        android:id="@+id/player_backward_ripple"
        android:layout_width="250dp"
        android:layout_height="match_parent"
        app:center="startCenter"
        app:drawable="@drawable/ic_fast_rewind_24"
        app:layout_constraintStart_toStartOf="parent"
        app:text="-10s" />

    <!-- below of the player_auto_hidden_control_view -->
    <com.skyd.anivu.ui.player.ForwardRippleView
        android:id="@+id/player_forward_ripple"
        android:layout_width="250dp"
        android:layout_height="match_parent"
        app:center="endCenter"
        app:drawable="@drawable/ic_fast_forward_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:text="+10s" />

    <!-- player_auto_hidden_control_view will auto gone after several seconds -->
    <!-- Don't place views such as long press forward, seek preview.. -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/player_auto_hidden_control_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/player_top_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_gray_transparent_angle_270"
            android:layoutDirection="ltr"
            android:paddingHorizontal="12dp"
            android:paddingBottom="50dp"
            app:layout_constraintTop_toTopOf="parent">

            <ImageButton
                android:id="@+id/player_back"
                style="@style/AniVuStyledControls.Button.Back"
                android:scaleType="fitCenter"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/player_title"
                style="@style/AniVuStyledControls.TitleText"
                app:layout_constrainedWidth="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/player_settings"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toEndOf="@id/player_back"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Movie.mp4" />

            <ImageButton
                android:id="@+id/player_settings"
                style="@style/AniVuStyledControls.Button.Settings"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/player_bottom_bar"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="bottom"
            android:background="@drawable/shape_gray_transparent_angle_90"
            android:layoutDirection="ltr"
            android:paddingHorizontal="12dp"
            app:layout_constraintBottom_toBottomOf="parent">

            <LinearLayout
                android:id="@+id/player_basic_controls_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <ImageButton
                    android:id="@+id/player_play_pause"
                    style="@style/AniVuStyledControls.Button.PlayPause"
                    android:layout_gravity="center_vertical" />

                <LinearLayout
                    android:id="@+id/player_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|start"
                    android:layoutDirection="ltr"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="10dp">

                    <TextView
                        android:id="@+id/player_position"
                        style="@style/AniVuStyledControls.Text.Time" />

                    <TextView
                        style="@style/AniVuStyledControls.Text.Time"
                        android:text=":" />

                    <TextView
                        android:id="@+id/player_duration"
                        style="@style/AniVuStyledControls.Text.Time" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/player_basic_controls"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layoutDirection="ltr"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageButton
                    android:id="@+id/player_subtitle"
                    style="@style/AniVuStyledControls.Button.CC" />
            </LinearLayout>

            <View
                android:id="@+id/player_progress_placeholder"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:layout_constraintBottom_toTopOf="@id/player_basic_controls_left" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageButton
            android:id="@+id/player_screenshot"
            style="@style/AniVuStyledControls.ScreenShot"
            android:layout_gravity="center_vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/player_reset_zoom"
            style="@style/AniVuStyledControls.Button.FloatButton.ResetZoom"
            app:layout_constraintBottom_toTopOf="@id/player_bottom_bar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/player_forward_85s"
            style="@style/AniVuStyledControls.Button.FloatButton.Forward85s"
            app:layout_constraintBottom_toTopOf="@id/player_bottom_bar"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/player_long_press_playback_speed"
        style="@style/AniVuStyledControls.Button.FloatButton.LongPressPlaybackSpeed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.25">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="10dp"
            android:importantForAccessibility="no"
            android:src="@drawable/ic_fast_forward_24"
            app:tint="@android:color/white" />

        <TextView style="@style/AniVuStyledControls.Button.FloatButton.LongPressPlaybackSpeedText" />
    </LinearLayout>

    <TextView
        android:id="@+id/player_seek_preview"
        style="@style/AniVuStyledControls.Button.FloatButton.SeekPreview"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="00:03 / 7:50" />

    <LinearLayout
        android:id="@+id/player_brightness_controls"
        style="@style/AniVuStyledControls.Button.FloatButton.BrightnessVolume"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/player_brightness_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:importantForAccessibility="no"
            android:src="@drawable/ic_brightness_low_24"
            app:tint="@android:color/white" />

        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/player_brightness_progress"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="3dp"
            android:max="100" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/player_volume_controls"
        style="@style/AniVuStyledControls.Button.FloatButton.BrightnessVolume"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/player_volume_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:importantForAccessibility="no"
            android:src="@drawable/ic_volume_up_24"
            app:tint="@android:color/white" />

        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/player_volume_progress"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="3dp"
            android:max="100" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>